{
  "name": "mindanao-truck-simulator",
  "version": "0.1.0",
  "description": "A web-based truck driving simulation game set in Mindanao, Philippines",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:preview": "npm run build && wrangler pages deploy dist --branch preview",
    "osm:download": "node scripts/osm-download.js",
    "osm:process": "go run scripts/osm-process.go"
  },
  "keywords": [
    "truck-simulator",
    "driving-game",
    "babylon-js",
    "havok-physics",
    "webgl",
    "mindanao",
    "philippines"
  ],
  "author": "Loable Tech",
  "license": "MIT",
  "homepage": "https://mindanao-truck-simulator.repetitive.games",
  "repository": {
    "type": "git",
    "url": "https://github.com/loabletech/MindanaoTruckSimulator"
  },
  "dependencies": {
    "@babylonjs/core": "^8.44.0",
    "@babylonjs/havok": "^1.3.11",
    "@babylonjs/loaders": "^8.44.0"
  },
  "devDependencies": {
    "vite": "^7.3.0",
    "wrangler": "^4.54.0"
  }
}
